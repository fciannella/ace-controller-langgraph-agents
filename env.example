# Root .env example for ACE Controller LangGraph Agents
# Copy to .env and fill in values as needed.

# Required for agent LLM calls (used by agents/ when running `langgraph dev`)
OPENAI_API_KEY=

# Optional: LangSmith tracing/telemetry
LANGSMITH_API_KEY=
LANGSMITH_BASE_URL=https://api.smith.langchain.com
LANGSMITH_PROJECT=ace-controller

# Local Python client defaults (talk_to_agent.py)
LANGGRAPH_BASE_URL=http://127.0.0.1:2024
LANGGRAPH_ASSISTANT=ace-base-agent
USER_EMAIL=test@example.com
STREAM_MODE=values

# Docker-compose service wiring (if using docker-compose.yaml)
REDIS_URI=redis://langgraph-redis:6379
POSTGRES_URI=postgres://postgres:postgres@langgraph-postgres:5432/postgres?sslmode=disable


